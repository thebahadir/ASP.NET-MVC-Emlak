@model ProjeEmlak.Models.ChangePassword
@{
    ViewBag.Title = "ChangePassword";
}

<div class="container">
    <div class="row" style="justify-content:center; padding-top:60px; padding-bottom:225px;">

        <div class="col-md-8" style="text-align:right">
            <div class="img-thumbnail" style="width:845px;">

                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item"><a href="/Home/Index">Anasayfa</a></li>
                        <li class="breadcrumb-item active" aria-current="page">Şifre Değiştir</li>
                    </ol>
                </nav>

                @using (Html.BeginForm("ChangePassword", "Account", FormMethod.Post, new { @class = "list-group-horizontal-sm" }))
                {
                    @Html.AntiForgeryToken()
                    <div class="form-group row">
                        <label for="colFormLabel" class="col-sm-3 col-form-label font-weight-bold">Eski Şifre :</label>
                        <div class="col-sm-4">
                            @Html.EditorFor(m => m.OldPassword, new { htmlAttributes = new { @class = "form-control", Type= "password" } })
                            @Html.ValidationMessageFor(m => m.OldPassword, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="form-group row">
                        <label for="colFormLabel" class="col-sm-3 col-form-label font-weight-bold">Yeni Şifre :</label>
                        <div class="col-sm-4">
                            @Html.EditorFor(m => m.NewPassword, new { htmlAttributes = new { @class = "form-control", Type = "password" } })
                            @Html.ValidationMessageFor(m => m.NewPassword, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="form-group row">
                        <label for="colFormLabel" class="col-sm-3 col-form-label font-weight-bold">Yeni Şifre (Tekrar) :</label>
                        <div class="col-sm-4">
                            @Html.EditorFor(m => m.ConNewPassword, new { htmlAttributes = new { @class = "form-control", Type = "password" } })
                            @Html.ValidationMessageFor(m => m.ConNewPassword, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group row">
                        <div class="col-sm-7">
                            <button type="submit" class="btn btn-outline-info  btn-sm">Kaydet</button>
                        </div>
                    </div>
                }

            </div>
        </div>

    </div>

</div>

