@model  ProjeEmlak.Models.ProfilGuncelle

@{
    ViewBag.Title = "Profil";
}

<div class="container">
    <div class="row" style="justify-content:center; padding-top:60px; padding-bottom:170px;">

        <div class="col-md-8" style="text-align:right">
            <div class="img-thumbnail" style="width:845px;">

                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item"><a href="/Home/Index">Anasayfa</a></li>
                        <li class="breadcrumb-item active" aria-current="page">Profil Güncelle</li>
                    </ol>
                </nav>

                @using (Html.BeginForm("Profil", "Account", FormMethod.Post, new { @class = "list-group-horizontal-sm" }))
                {
                    @Html.AntiForgeryToken()
                    @Html.HiddenFor(model => model.Id)
                    <div class="form-group row">
                        <label for="colFormLabel" class="col-sm-3 col-form-label font-weight-bold">Ad :</label>
                        <div class="col-sm-4">
                            @Html.EditorFor(m => m.Name, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(m => m.Name, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="form-group row">
                        <label for="colFormLabel" class="col-sm-3 col-form-label font-weight-bold">Soyad :</label>
                        <div class="col-sm-4">
                            @Html.EditorFor(m => m.Surname, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(m => m.Surname, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="form-group row">
                        <label for="colFormLabel" class="col-sm-3 col-form-label font-weight-bold">Kullanıcı Adı :</label>
                        <div class="col-sm-4">
                            @Html.EditorFor(m => m.Username, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(m => m.Username, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="form-group row">
                        <label for="colFormLabel" class="col-sm-3 col-form-label font-weight-bold">E-Mail :</label>
                        <div class="col-sm-4">
                            @Html.EditorFor(m => m.Email, new { htmlAttributes = new { @class = "form-control", Type= "email" } })
                            @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group row">
                        <div class="col-sm-7">
                            <a href="/Account/ChangePassword" style="padding-right:15px">Şifre Değiştir</a>
                            <button type="submit" class="btn btn-outline-info  btn-sm">Kaydet</button>
                        </div>
                    </div>
                }

            </div>
        </div>

    </div>

</div>

